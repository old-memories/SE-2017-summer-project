<?xml version="1.0" encoding="utf-8"?>
<!-- Struts2 DTD -->
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="utf-8" />
	<constant name="struts.devMode" value="true" />

	<package name="userAction" extends="struts-default,json-default">
        <action name="*" class="action.UserAction" method="{1}">
            <result name="success">/success.jsp</result>
            <result name="error">/fail.jsp</result>
            <result name="logout">/login.jsp</result>
        </action>
	</package>

	<package name="bookAction" extends="struts-default">
        <action name="showAllBooks" class="action.BookAction" method="showAllBooks">
            <result name="success">test.jsp</result>
        </action>
        <action name="showUserBooks" class="action.BookAction" method="showUserBooks">
            <result name="success">test.jsp</result>
        </action>
    </package>


</struts>